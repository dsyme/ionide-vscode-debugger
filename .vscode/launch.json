{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Extension",
			"preLaunchTask": "npm",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}",
				"${workspaceRoot}/test"
			],
			"sourceMaps": true,
			"outFiles": [ "${workspaceRoot}/out/**/*.js" ]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Server",
			"cwd": "${workspaceRoot}",
			"program": "${workspaceRoot}/src/ionideDebug.ts",
			"args": [ "--server=4711" ],
			"sourceMaps": true,
			"outFiles": [ "${workspaceRoot}/out/**/*.js" ]
		},
		{
			"type": "ionide",
			"request": "launch",
			"name": "Ionide Sample",
			"program": "${workspaceRoot}/${command.AskForProgramName}",
			"stopOnEntry": true
		}
	],
	"compounds": [
		{
			"name": "Extension + Server",
			"configurations": [ "Extension", "Server" ]
		}
	]
}
